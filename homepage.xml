<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Homepage">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@android:color/holo_blue_light"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentTop="true"
        tools:ignore="ExtraText">

        <!-- Logo -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="79dp"
            android:layout_height="74dp"
            android:src="@drawable/_731547789728" />

        <!-- App Name -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/alkatra_bold"
            android:text="BUS TRACKER APP"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
        Â </LinearLayout>

    <RelativeLayout
        android:id="@+id/current_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#6200EE">


        <ImageView
            android:id="@+id/current_location_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="349dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="Current Location Icon"
            android:src="@drawable/location" />

        <Spinner
            android:id="@+id/current_spinner"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#6200EE"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:popupBackground="@color/white"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>
    <!--  Divider  -->
    <!--  Confirm Button  -->
    <!--  Bottom Navigation  -->

    <RelativeLayout
        android:id="@+id/destination_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#6200EE">


        <ImageView
            android:id="@+id/destination_location_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="349dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="Destination Location Icon"
            android:src="@drawable/location" />

        <Spinner
            android:id="@+id/destination_spinner"
            android:layout_width="329dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#6200EE"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:popupBackground="@color/white"
            android:spinnerMode="dropdown"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="66dp"
        android:paddingStart="15dp"
        android:paddingEnd="8dp"
        android:backgroundTint="#7A4EFF"
        android:text="Confirm"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#F3EDF7">

        <!--  Bus Station  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bus_station_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/busstop"
                android:contentDescription="Bus Station Icon"/>

            <TextView
                android:id="@+id/bus_station_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Bus Station"
                android:textSize="12sp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <!--  Profile  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/user"
                android:contentDescription="Profile Icon"/>

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
